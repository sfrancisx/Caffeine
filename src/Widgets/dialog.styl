@import 'colors'

.dialog {
	position: absolute;
    top: 0;
    left: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	font-size: 14px;
    z-index: 5;
    -webkit-user-select: none;
	background: transparent;
	color: #6f6f6f;

	> div {
		position: absolute;
		top: 0;
		left: 10px;
		right: 10px;
		padding: 17px 15px;
		background: #fff;
		outline: 0 none;
		transform: translate3d(0,0,0);

		.modal& {
			top: 25%;
			text-align: center;
			max-width : 400px;
			margin-left: auto;
			margin-right: auto;
		}
		
		p:first-of-type {
		    margin: 0 15px 15px 0;
		}
	}
    
	.buttons {
	    text-align: center;
	    
		button { 
			display: inline;
			background-color: transparent;
			color: #000;
			border-radius: 4px;
			border: 1px solid rgb(209, 209, 209);
		}

		button + button {
			margin-left: 7px;	
		}
	}

    a {
        color: #6f6f6f;
    }

    h2 {
        margin: 0 20px 13px;
        font-size: 14px;
        text-align: center;
    }
    
    p {
        margin: 0;
    }

	.btn {
	    margin: 15px auto 0;
        max-width: 48%;
        white-space: normal;
        word-wrap: break-word;    
	    cursor: default;
		min-width: 85px;
	}

	.dialog-close {
		position: absolute;
		top: 0;
		right: 0;
		width: 25px;
		height: 25px;
		background-color: rgba(0, 0, 0, 0.6);

		&:hover, &:focus {
			background-color: rgba(0, 0, 0, 1);
		}
	}

	button{
		&:hover, &:focus {
			box-shadow: inset 0 0 0 1px rgba(0, 0, 0,0.4);
		}
	}
	
	.selection {
	    position: relative;
	    padding: 10px 15px 10px 46px;
	    background: rgba(255,255,255,.1);
	    
	    &:first-of-type {
	        margin-bottom: 10px;
	    }
	    
	    input {
	        position: absolute;
	        top: 8px;
	        left: 15px;
	        background-color: transparent;
	    }
	}
	
	label {
        display: block;
        margin-bottom: 2px;
        font-size: 12px;
        color: #999;
    }
	
	.dropdown {
	    position: relative;
	}
	
	.input {
        color: #6f6f6f;
        padding-left: 8px;
        width: 100%;
        height: 30px;
        border: 1px solid #cacaca;
        background-color: transparent;
        -webkit-appearance: none;
        -webkit-border-radius: 2px;
        outline: 0 none;
        
        &[disabled] {
            background-color: #f5f5f5;
        }
        
        option {
            color: #000;
        }
    }
    
    .select-toggle {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 30px;
        height: 30px;
        text-align: center;
        pointer-events: none;
        
        i {
            position: absolute;
            top: 50%;
            left: 50%;
            margin: -4px 0 0 -4px;
            width: 11px;
            height: 11px;
            -webkit-mask: url("../src/Assets/images/icn-arrow.svg") no-repeat 50% 50%;
            -webkit-mask-size: 11px;
			background-color: #6f6f6f;
        }
    }
    
    .help-link {
        position: relative;
        top: 12px;
        font-size: 12px;
    }
}

.dialog-displayed {
    .container,
    .container > * {
        opacity: .5;
        pointer-events: none;
    }
}
