.avatar {
    width: 36px;
    height: 36px;
    box-shadow: 0 0 0 1px;
    border: 2px solid transparent;
    border-radius: 50%;
    background-size: 100%;
    background-clip: padding-box;
    
	position: relative;
	overflow: hidden;

    &.lg {
        width: 48px;
        height: 48px;
    }
    
    &.sm {
        width: 18px;
        height: 18px;
    }

	> span {
		position: absolute;
		background-clip: padding-box;
		background-size: 100%;
		background-repeat: no-repeat;
		background-color: inherit;
		width: 50%;
		height: 50%;

		&:first-of-type {
			left: 0;
			top: 0;
		}

		&:nth-of-type(2) {
			left: 50%;
			top:0;
		}

		&:nth-of-type(3) {
			left: 0;
			top: 50%;
		}

		&:nth-of-type(4) {
			left: 50%;
			top: 50%;
		}
	}

	&.doubles > span {
		width: 100%;
		height: 100%;

		&:first-of-type {
			left: -50%;
			background-position: 8.5px;
		}

		&:last-of-type {
			left: 50%;
			top: 0;
			background-position: -8px;
		}
	}

	&.triplets > span {
		width: 100%;
		height: 100%;

		&:first-of-type {
			left: -50%;
			z-index: 1;
			border-bottom-right-radius: 2.5cm 2cm;
			background-position-x: 8px;
		}

		&:nth-of-type(2) {
			z-index: 1;
			border-bottom-left-radius: 2.5cm 2cm;
			background-position-x: -8px;
		}
		
		&:nth-of-type(3) {
			top: 50%;
			background-position-y: -8px;
			border-top-left-radius: 1cm 2cm;
			border-top-right-radius: 1cm 2cm;
		}
	}

}
