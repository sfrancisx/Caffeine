.photocon-img {
    position: relative;
    top: 50%;
    margin: -21px auto 0;
    width: 100%;
    height: 45px;
    background-position: 50% 50%;
    background-repeat: no-repeat;
    background-size: auto 42px;
    transition: all .5s;
    text-indent: -9999px;
    cursor: default;  

    &[data-animated="true"] {
        height: 42px;
        width: 42px;
        background-size: 126px;
        background-position: 0 0;

        &[data-created="true"] {
            border-radius: 50%;
            animation: photoconAnimate 1.5s infinite;
            -webkit-animation-fill-mode: forwards;
        }
    }
    
    &.photocon-text {
        font-size: 16px;
        line-height: 45px;
        text-indent: 0;
        font-weight: bold;
        background: 0 none !important;
    }
}

