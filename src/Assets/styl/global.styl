.photocon-display {
    position: relative;
    top: 0;
    display: inline-block;
    padding-right: 4px;

    .photocon-img {
        position: absolute;
        top: 0%;
        left: 0%;
        margin: 0;
        width: 27px;
        height: 27px;
        background-size: 27px 27px;
        background-position: 0 0;

        &[data-created="true"],
        &[data-animated="true"] {
            margin: -37px 0 0 -37px !important;
            height: 100px;
            width: 100px;
            background-size: 300px 100px;
            border-radius: 50%;
            -webkit-animation: photoconAnimate 1.5s infinite;
            -webkit-transform: translateZ(0) scale(.27);
            -webkit-animation-fill-mode: forwards;
            -webkit-transition: all .15s;
            z-index: 1;

            &:hover {
                -webkit-transform: scale(.32);
            }
        }
    }

    &.photocon-enlarge .photocon-img[data-created="true"] {
        -webkit-animation: photoconAnimate 1.5s infinite, photoconEnlarge 3.25s;
        -webkit-animation-fill-mode: forwards;
        z-index: 2;
    }
}

@-webkit-keyframes photoconAnimate {
    0% {
        background-position: 0 0;
    }
    19.99% {
        background-position: 0 0;
    }
    20% {
        background-position: 50% 0;
    }
    39.99% {
        background-position: 50% 0;
    }
    40% {
        background-position: 100% 0;
    }          
    79.99% {
        background-position: 100% 0;
    }
    80% {
        background-position: 50% 0;
    }
    100% {
        background-position: 50% 0;
    }
}

@-webkit-keyframes rotate {
    from { transform: rotateZ(0deg); }
    to   { transform: rotateZ(360deg); }
}

